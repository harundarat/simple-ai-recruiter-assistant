generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CV {
  id            Int             @id @default(autoincrement())
  original_name String
  hosted_name   String
  url           String
  ProjectReport ProjectReport[]
}

model ProjectReport {
  id            Int    @id @default(autoincrement())
  cv            CV     @relation(fields: [cv_id], references: [id])
  cv_id         Int
  original_name String
  hosted_name   String
  url           String
}
